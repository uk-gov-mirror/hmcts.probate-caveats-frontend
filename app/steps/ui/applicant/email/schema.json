{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "applicant-email",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 6,
      "maxLength": 255,
      "pattern": "^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$"
    }
  },
  "required": [
    "email"
  ]
}
